<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCustomerFragment">

    <ImageView

        android:id="@+id/logoZealand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:src="@drawable/zealand_icon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:layout_below="@+id/logoZealand"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:drawablePadding="20sp"
                android:gravity="center"
                android:hint="Kundenavn"
                android:textColor="@color/zealandBlack"
                android:textColorHint="@color/zealandBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/customerNameText"
                    android:layout_height="80dp"
                    android:background="@color/editText"
                    android:ems="15"
                    android:padding="20sp"
                    android:textColor="@color/zealandBlack"
                    android:textColorHint="@color/zealandBlack"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:drawablePadding="20sp"
                android:gravity="center"
                android:hint="Adresse"
                android:textColor="@color/zealandBlack"
                android:textColorHint="@color/zealandBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/customerAdressText"
                    android:layout_height="wrap_content"
                    android:background="@color/editText"
                    android:ems="15"
                    android:padding="20sp"
                    android:textColor="@color/zealandBlack"
                    android:textColorHint="@color/zealandBlack"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/linearLayoutForCityAndZip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/zipCode"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginStart="50sp"
                    android:layout_weight=".50"
                    android:drawablePadding="20sp"
                    android:hint="Post nr."
                    android:textColor="@color/zealandBlack"
                    android:textColorHint="@color/zealandBlack">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/editText"
                        android:id="@+id/customerZipCodeText"
                        android:ems="15"
                        android:maxLength="4"
                        android:inputType="number"
                        android:padding="20sp"
                        android:textColor="@color/zealandBlack"
                        android:textColorHint="@color/zealandBlack" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:drawablePadding="20sp"
                android:gravity="center"
                android:hint="Ordrenummer"
                android:textColor="@color/zealandBlack"
                android:textColorHint="@color/zealandBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editText"
                    android:id="@+id/ordernNumberText"
                    android:ems="15"
                    android:padding="20sp"
                    android:textColor="@color/zealandBlack"
                    android:textColorHint="@color/zealandBlack"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/installedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:drawablePadding="20sp"
                android:gravity="center"
                android:hint="Installation er udfÃ¸rt af"
                android:textColor="@color/zealandBlack"
                android:textColorHint="@color/zealandBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editText"
                    android:id="@+id/installedByText"
                    android:ems="15"
                    android:padding="20sp"
                    android:textColor="@color/zealandBlack"
                    android:textColorHint="@color/zealandBlack"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/installationID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:drawablePadding="20sp"
                android:gravity="center"
                android:hint="Installation ID"
                android:textColor="@color/zealandBlack"
                android:textColorHint="@color/zealandBlack">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editText"
                    android:id="@+id/installationIDText"
                    android:ems="15"
                    android:padding="20sp"
                    android:textColor="@color/zealandBlack"
                    android:textColorHint="@color/zealandBlack"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:backgroundTint="@color/zealandBlack"
        android:text="@string/Anuller_text"
        android:textColor="@color/zealandYellow"
        android:textSize="20sp" />
    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:backgroundTint="@color/zealandBlack"
        android:text="Gem og Videre"
        android:textColor="@color/zealandYellow"
        android:textSize="20sp" />
</LinearLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>