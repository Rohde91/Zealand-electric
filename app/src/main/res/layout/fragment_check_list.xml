<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="15sp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="start"
         android:orientation="vertical">


          <ExpandableListView
              android:id="@+id/eListView"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layoutDirection="rtl"
              />

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


               <com.google.android.material.button.MaterialButton
                   android:id="@+id/button_Annuller"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/zealandBlack"
                   android:text="@string/Anuller_text"
                   android:textColor="@color/zealandYellow"
                   android:textSize="11sp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toStartOf="@+id/button_Gem"
                   app:layout_constraintHorizontal_bias="0.313"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.0"
                   app:layout_constraintWidth_percent="0.25" />

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/button_Gem"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="36dp"
                   android:backgroundTint="@color/zealandBlack"
                   android:text="@string/Gem_text"
                   android:textColor="@color/zealandYellow"
                   android:textSize="11sp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toStartOf="@+id/button_Gem_Afslut"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.0"
                   app:layout_constraintWidth_percent="0.25" />

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/button_Gem_Afslut"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginEnd="16dp"
                   android:backgroundTint="@color/zealandBlack"
                   android:text="@string/Gem_afslut"
                   android:textColor="@color/zealandYellow"
                   android:textSize="11sp"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.0"
                   app:layout_constraintWidth_percent="0.25" />
          </androidx.constraintlayout.widget.ConstraintLayout>

     </LinearLayout>


</ScrollView>