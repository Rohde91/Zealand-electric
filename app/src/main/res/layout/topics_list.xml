<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="4sp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topics_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic 3"
        app:layout_constraintRight_toLeftOf="@id/checkBox1_ja"
        app:layout_constraintStart_toStartOf="@id/topics_tv"
        android:paddingRight="180sp"


        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox1_ja"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginRight="48dp"
        android:text="Ja"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/checkBox2_Nej"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-5dp" />

    <CheckBox
        android:id="@+id/checkBox2_Nej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="75dp"
        android:text="Nej"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/checkBox3_Ikke_relevant"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-4dp" />

    <CheckBox
        android:id="@+id/checkBox3_Ikke_relevant"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:elegantTextHeight="true"
        android:inputType="textMultiLine"
        android:text="Ikke relevant"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="4dp" />

    <ImageButton
        android:id="@+id/button_note"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:background="@color/zealandYellow"
        android:src="@android:drawable/ic_menu_add"
        app:layout_constraintTop_toBottomOf="@+id/topics_tv"
        tools:layout_editor_absoluteX="-4dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="note_button_to_openPupup">


    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>